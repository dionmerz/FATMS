<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginLeft="10dp"
        android:background="@color/colorPrimaryDark"
        android:orientation="vertical"
        >


        <AutoCompleteTextView
            android:hint="Departure Location"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_departure"
            android:background="@drawable/text_style"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="20dp"
            android:textSize="24dp"
            android:layout_weight="1" />

        <AutoCompleteTextView
            android:hint="Destination Location"
            android:textAlignment="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/textView_destination"
            android:background="@drawable/text_style"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:textSize="24dp"
            android:layout_weight="1" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20sp">

            <Button
                android:text="Departure Date"
                android:layout_width="match_parent"
                android:layout_height="37dp"
                android:layout_marginRight="5dp"
                android:textSize="12sp"
                android:id="@+id/button_departure_date"
                android:gravity="center_horizontal"
                android:layout_weight="1" />

            <TextView
                android:id="@+id/textView_depart_date"
                android:background="@drawable/text_style"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:textSize="24sp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:layout_gravity="right"/>

        </LinearLayout>


        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/text_style"
            android:id="@+id/button_search_one_way"
            android:text="SEARCH"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="20dp"

            />


    </LinearLayout>









</FrameLayout>
